{% extends 'base.html.twig' %}

{% block title %}{{ souscategorie.nom }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-6">
                <h1>Secteur {{ souscategorie.nom }}</h1>
                <hr>
                <div class="card mx-2">
                    {% for produit in produits %}
                        <div class="card text-white bg-primary mb-4">
                            {% if produit.image %}
                                <img src="{{ asset('images/' ~ produit.image) }}" class="card-img-top" alt="produit">
                                <img src="/images/produit{{ produit.imagesrc }}" alt="produit" style="max-height: 200px; width: 100%;">
                            {% endif %}
                            <div class="card-body">
                                <h5 class="card-title">{{ produit.nom }}</h5>
                                <p class="card-text">{{ produit.description }}</p>
                                <a href="{{ path("app_detail", {id: produit.id}) }}" class="btn btn-primary btn-sm">Voir le d√©tail</a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

