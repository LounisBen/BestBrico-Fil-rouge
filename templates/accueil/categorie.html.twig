{% extends 'base.html.twig' %}

{% block title %}Welcome{% endblock %}

{% block body %}

<div class="container mx-auto mt-4">
    <div class="row">
        <center><h1>{{ categorie.nom }}</h1></center>
        <hr>
        
        <div class="d-flex justify-content-center flex-wrap">
            {% for sc in sousCategories %}
            <div class="card d-flex col-5 ms-4">
                <a href="{{ path("app_produit", {id: sc.id}) }}">
                    <div class="card text-white bg-primary mb-4 ">
                        <div class="card-header d-flex justify-content-center h3">{{ sc.nom }}</div>
                        <div class="card-body d-flex flex-column align-items-center justify-content-center">
                            <img src="/images/sous_categorie{{ sc.imagesrc }}" alt="souscategorie" style="max-height: 300px; width: 100%;">
                            <p></p>
                            <a href="{{ path("app_produit", {id: sc.id}) }}" class="btn btn-outline-dark">Voir les produits</a>
                        </div>
                    </div>
                </a>
            </div>
            {% endfor %}
        </div>
 
    </div>
</div>

{% endblock %}
